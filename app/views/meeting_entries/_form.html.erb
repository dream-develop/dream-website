<%= form_with(model: meeting_entry, local: true) do |form| %>
  <% if meeting_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meeting_entry.errors.count, "error") %> prohibited this meeting_entry from being saved:</h2>

      <ul>
      <% meeting_entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="all">
<div class="body">
  <div class="entry"><h1>説明会予約</h1></div>
  <p class="comment">※は必須項目です。必ずチェックまたはご記入ください。</p>
  <table>
    <tbody>
      <tr>
        <th>
        <p class="kome">※</p>
        <p class="title">説明会日程</p>
        </th>
        <td>
          <div class="date">
            <% @meetings.each do |t|  %>
              <% if t.status == 10 %>
                <label><%= check_box "temp",t.id%><%= t.datetime.strftime("%Y年%-m月%-d日 %-H時%-M分")%></label>
              <% else %>
                <label><%= check_box "temp",t.id, :disabled => true%><del><%= t.datetime.strftime("%Y年%-m月%-d日 %-H時%-M分")%></del></label>
              <% end %>
              <br>
            <% end %>
            <br>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <p class="kome">※</p>
          <p class="title">お名前</p>
        </th>
        <td>
          <div class="family_name">
            <%= form.label :　姓 %>
            <%= form.text_field :family_name %>
          </div>
          <div class="first_name">
            <%= form.label :　名 %>
            <%= form.text_field :first_name %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <p class="kome">※</p>
          <p class="title">フリガナ</p>
        </th>
        <td>
          <div class="family_kana">
            <%= form.label :セイ %>
            <%= form.text_field :family_kana %>
          </div>
          <div class="first_kana">
            <%= form.label :メイ %>
            <%= form.text_field :first_kana %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <p class="kome">※</p>
          <p class="title">ご連絡先TEL(半角数字)</p>
        </th>
        <td>
          <div class="tel">
            <%= form.label :　　 %>
            <%= form.text_field :phone %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <p class="kome">※</p>
          <p class="title">メールアドレス</p>
        </th>
        <td>
          <div class="mail">
            <%= form.label :　　 %>
            <%= form.text_field :email %>
          </div>
        </td>
      </tr>
      <tr>
        <th>目的</th>
        <td>
          <div class="purpose">
            <%= form.label :　　 %>
            <%= form.text_area :purpose %>
          </div>
        </td>
      </tr>
      <tr>
        <th>備考</th>
        <td>
          <div class="note">
            <%= form.label :　　 %>
            <%= form.text_area :note %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <p class="kome">※</p>
          <p class="title">利用規約</p>
        </th>
        <td>
          <div class="agreement">
            <%= form.check_box :agreement %>
            <%= link_to '利用規約の確認', :controller => "meeting_entries", :action => "agreement" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="actions">
    <%= form.submit "送信", class:"submit"%>
  </div>
</div>
</div>
<% end %>
